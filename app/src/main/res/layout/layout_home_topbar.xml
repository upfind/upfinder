<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_default"
                android:background="@color/bg_top_black"
                android:orientation="vertical"
                android:paddingLeft="@dimen/space_big"
                android:paddingRight="@dimen/space_big"
    >

    <TextView
        android:id="@+id/tvTopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Upfinder"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white_default"/>

    <ImageView
        android:id="@+id/ivTopMore"
        android:layout_width="@dimen/widget_small"
        android:layout_height="@dimen/widget_small"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_add_white_36dp"/>

    <ImageView
        android:id="@+id/ivTopSearch"
        android:layout_width="@dimen/widget_small"
        android:layout_height="@dimen/widget_small"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_big"
        android:layout_toLeftOf="@+id/ivTopMore"
        android:src="@drawable/ic_search_white_36dp"
        android:padding="@dimen/space_small"
        />

</RelativeLayout>